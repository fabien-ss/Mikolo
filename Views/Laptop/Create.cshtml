@model mikolo.Laptop

@{
    ViewData["Title"] = "Create";
}

<partial name="Link"/>

<hr />
<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-4 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Register new laptop</h4>
                            <p class="card-description">
                                New Laptop
                            </p>
                            <form class="forms-sample" asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="IdReference" for="exampleInputName1" class="control-label">Reference</label>
                                    <select asp-for="IdReference" class="form-select" id="exampleInputName1" asp-items="ViewBag.IdReference"></select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdProcesseur" for="exampleInputEmail3" class="control-label">Processeur</label>
                                    <select asp-for="IdProcesseur" class="form-select" id="exampleInputEmail3" asp-items="ViewBag.IdProcesseur"></select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdRam" for="exampleInputPassword4" class="control-label">Ram</label>
                                    <select asp-for="IdRam" class="form-select" id="exampleInputPassword4" asp-items="ViewBag.IdRam"></select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdEcran" for="exampleSelectGender" class="control-label">Ecran</label>
                                    <select asp-for="IdEcran" id="exampleSelectGender" class="form-select" asp-items="ViewBag.IdEcran"></select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdDisqueDur"  for="exampleSelectGender2" class="control-label">Disque dur</label>
                                    <select asp-for="IdDisqueDur" class="form-select" id="exampleSelectGender2" asp-items="ViewBag.IdDisqueDur"></select>
                                </div>
                                <div class="form-group">
                                    <label for="file" class="label-file">File upload</label>
                                    <input id="file" class="input-file" type="file" onchange="previewImage(event)">
                                </div>
                                <button type="submit" class="btn btn-primary me-2">Submit</button>
                                <button type="reset" class="btn btn-light">Cancel</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-8" id="image-preview">
                </div>
            </div>
        </div>
    </div>
</div>
 <script>
        function previewImage(event) {
            var input = event.target; // L'élément input de type fichier
            var preview = document.getElementById('image-preview'); // L'élément où l'aperçu de l'image sera affiché

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    preview.style.display = 'block'; // Afficher l'aperçu une fois l'image chargée
                    preview.innerHTML = '<img src="' + e.target.result + '" style="width:100%; height:100%;">'; // Afficher l'aperçu de l'image
                }

                reader.readAsDataURL(input.files[0]); // Charger l'image en tant qu'URL de données
            } else {
                preview.style.display = null; // Cacher l'aperçu si aucun fichier n'est sélectionné
                preview.innerHTML = ''; // Effacer le contenu de l'aperçu
            }
        }
    </script>
